@{
    ViewData["Title"] = "Admin Product Page";
    Layout = "_LayoutAdmin";
}
@model List<FrontEnd.Models.Product>
<div class="content-wrapper">
    <div class="text-center">
        <h1 class="display-4 text-left ml-4">Products</h1>
        <div class="control text-left ml-4">
            <a href="/admin/products/create" class="btn btn-primary">Create Product</a>
        </div>
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count > 0) {
                    foreach(var product in Model){
                        <tr>
                            <td>@product.id</td>
                            <td>@product.name</td>
                            <td>@product.price</td>
                            <td>
                                <a href="/admin/products/edit/@product.id" class="btn btn-primary">Edit</a>
                                <a href="/admin/products/edit/@product.id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }else {

                }
            </tbody>
        </table>
    </div>
</div>
